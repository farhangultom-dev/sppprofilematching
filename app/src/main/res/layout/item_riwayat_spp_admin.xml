<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardElevation="4dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Nama dan Badge Angsuran -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_nama_siswa"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#333333"
                android:text="Linda Kurnia Sari"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_badge_angsuran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_grey"
                android:text="Angsuran"
                android:textSize="12sp"
                android:textColor="#007AFF"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- NISN dan Kelas -->
        <TextView
            android:id="@+id/tv_nisn_kelas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="839289832773 â€¢ XI Akuntansi A"
            android:textColor="#888888"
            android:textSize="13sp"
            android:layout_marginTop="2dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp" />

        <!-- SPP dan Nominal -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_jenis_spp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SPP Bulanan"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_nominal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="Rp 140.000"
                android:textStyle="bold"
                android:textColor="#333333"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Status Pembayaran -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tv_label_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status Pembayaran"
                android:textSize="13sp"
                android:textColor="#888888" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menunggu Pembayaran"
                android:textAlignment="textEnd"
                android:textSize="13sp"
                android:textColor="#F9A825"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
